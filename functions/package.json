{
  "name": "learning-app-functions",
  "description": "Firebase Functions for Learning App - Google Docs to JSON parser",
  "version": "1.0.0",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test:list-docs": "ts-node src/listDocs.ts",
    "parse": "ts-node src/parseGoogleDoc.ts",
    "parse:home": "ts-node src/parseHomeDoc.ts",
    "parse:all": "ts-node src/parseAllDocs.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "googleapis": "^129.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "private": true
}
